---
import {
  AnnouncementBar,
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	YouTubeEmbedSection,
  StickyTextImageSection,
  CtaCardSection,
} from '@odyssey-theme/components';
import Layout from '../layouts/Page.astro';
import TextAndImageHero from '../components/sections/heros/TextAndImageHero.astro';
import TwoColumnTextSection from '../components/sections/heros/TwoColumnTextSection.astro';

const seo = {
	title: 'Landing Page #1 | Astro Odyssey Theme',
	description: 'Landing Page #1 | Astro Odyssey Theme',
};
---

<Layout seo={seo} >
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Woodhaven Smoke Shop</h1>
			<p>Best Smoke Shop in New York.</p>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/landing-1/landing-hero-1.jpg"
				alt="Hookah"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>

	<CustomerQuoteSection
		quoteText="Great store! Had everything I needed and for the best prices Iâ€™ve seen. The workers are nice and helpful and answered all the questions I had about my vape and hookah. Will be going back regularly."
		customerName="Jason"
	/>
	<h1 class="heading"> Products</h1>
	<ThreeColumnTextSection>
		<div slot="column-1-body">
			<h2>Bongs</h2>
			<img class="product" src="../public/assets/images/landing-1/bong.jpg"/>
		</div>
		<div slot="column-2-body">
			<h2>Vapes</h2>
			<img class="product" src="../public/assets/images/landing-1/vape.jpg"/>
		</div>
		<div slot="column-3-body">
			<h2>Hookahs</h2>
			<img class="product" src="../public/assets/images/landing-1/hookah.jpg"/>
		</div>
	</ThreeColumnTextSection>

	<TwoColumnTextSection>
		<div slot="column-1-body">
			<h2>Papers</h2>
			<img class="product" src="../public/assets/images/landing-1/papers.jpg"/>
		</div>
		<div slot="column-2-body">
			<h2>Trays</h2>
			<img class="product" src="../public/assets/images/landing-1/trays.jpg"/>
		</div>
	</TwoColumnTextSection>

	
</Layout>

